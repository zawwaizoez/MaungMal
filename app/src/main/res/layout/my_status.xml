<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kryptonite.maungmal.MyStatus">
    <include
        android:id="@+id/account_setting_toolbar"
        layout="@layout/app_bar2"/>
    <Button
        android:id="@+id/btnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mystatus"
        android:layout_marginTop="98dp"
        android:text="Change Status"
        app:layout_constraintTop_toBottomOf="@+id/mystatus"
        tools:layout_editor_absoluteX="106dp" />

    <EditText
        android:id="@+id/mystatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="Enter New Status"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="118dp" />
</RelativeLayout>
